<h1 id="page_title">hello</h1>
	
	<div class="skinny_wrapper wrapper_padding">
		<%= form_for @contact do |f| %>
		<%= f.label :name %><br>
		<%= f.text_field :name, required: true %>

		<br>

		<%= f.label :email %><br>
		<%= f.email_field :email, required: true %>
		<br>

		<%= f.label :message %><br>
		<%= f.text_field :message, as: :text %>

		<div class="hidden">
			<%= f.label :nickname %><br>
			<%= f.text_field :nickname, hint: 'leave this fiels blank' %>
		</div>
		<%= f.submit 'Send Message', class: "button" %>
		<% end %>
	</div>